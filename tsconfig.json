{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		// "rootDir": "./src",
		"rootDir": "./",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		// "src/**/*.ts", // files in the src directory
		"*.ts" // include TypeScript files in the root
	],
	"exclude": [
		"node_modules"
	]
}