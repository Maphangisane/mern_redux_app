{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "./",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"declaration": true,
		"declarationDir": "./dist/types"
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node",
	},
	"include": [
		"src/**/*",
		// "src/**/*.ts", // files in the src directory
		"*.ts", // include TypeScript files in the root
		"__tests__/**/*.ts" // include test files
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}